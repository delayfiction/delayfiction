<div class="page-wrap">
  <div class="issue">
    <div class="header-image">
      <img src="<%= asset_loc + art %>">
    </div>
    <h1 class="issue-title"><%= title %></h1>
    <% @issue.stories.each do |story|%>
      <a href="<%= host + '/' + story.issue + '/' + story.id + '.html' %>">
        <div class="post">
        <div class="banner">
          <h2 class="post-title"><%= story.title %></h1>
        </div>
        <div class="info">
          <div class="author"><p>by <%= story.author %></p></div>
          <div class="divider"><p> || </p></div>
          <div class="tags"><p><%= story.tag %></p></div>
          <div class="opener"><p><%= story.opener %></p></div>
        </div>
      </div>
    </a>
  <% end %>
  <% if next_issue %>
    <div class="left-goingness">
      <a href="<%= host + '/' + next_issue.id + '.html' %>">
        <%= next_issue.title %>
      </a>
     </div>
    <% end %>
  <% if prev_issue %>
    <div class="right-goingness">
      <a href="<%= host + '/' + prev_issue.id + '.html' %>">
        <%= prev_issue.title %>
      </a>
    </div>
    <% end %>

  </div>


<head>
  <meta charset="utf-8">
  {{#if title }}
    <title>{{ title }} || delay fiction</title>
  {{else}}
    <title>delay fiction</title>
  {{/if}}

  {{#if desc}}
    <meta name="description" content="{{ desc }}"/>
  {{else}}
    <meta name="description" content="{{ opener }}"/>
  {{/if}}

  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-118701210-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'UA-118701210-1');
    </script>

	<!-- favicon stuff -->
	<link rel="apple-touch-icon" sizes="180x180" href="/assets/apple-touch-icon.png">
	<link rel="icon" type="image/png" sizes="32x32" href="/assets/favicon-32x32.png">
	<link rel="icon" type="image/png" sizes="16x16" href="/assets/favicon-16x16.png">
	<link rel="manifest" href="/assets/site.webmanifest">

  <link rel="canonical" href="https://delayfiction.org/{{ nakedPath path }}">
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,400;0,500;1,400;1,500&family=Roboto+Mono:wght@600&family=Roboto:ital,wght@0,500;0,700;1,500;1,700&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/normalize.css@8.0.1/normalize.css" rel="stylesheet">
  <link href="/styles/index.css" rel="stylesheet">

  <meta name="og:type" content="article">
  <meta name="og:title" content="{{#if title}}{{ title }} || delay fiction{{ else }}delay fiction{{/if}}">
  <meta name="og:description" content="{{#if opener}}{{ opener }}{{ else }}Delay is a venue for good short fiction.{{/if}}">
  <meta name="og:image" content="https://delayfiction.org/{{ artFor this }}">
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{{#if title}}{{ title }} || delay fiction{{ else }}delay fiction{{/if}}">
  <meta name="twitter:description" content="{{#if opener}}{{ opener }}{{ else }}Delay is a venue for good short fiction.{{/if}}">
  <meta name="twitter:image" content="https://delayfiction.org/{{ artFor this }}">

  {{#if ( isPost this ) }}
      <script type="application/ld+json">
        { "@context": "http://www.schema.org",
        "@graph": [{
        "@type": "CreativeWork",
        "publisher": {
        "@type": "Organization",
        "name": "Delay Fiction",
        "logo": "https://delayfiction.org/delay-fiction.png"
        },
        "sourceOrganization": "Delay Fiction",
        "author": "{{ author }}",
        "headline": "{{ title }}",
        "image": "https://delayfiction.org/{{ artFor this }}",
        "description": "{{ opener }}",
        "url": "https://delayfiction.org/{{ nakedPath path }}",
        "datePublished": "a date"
        },{
        "@type": "BreadcrumbList",
        "itemListElement": [{
          "@type": "ListItem",
          "position": 1,
          "name": "Delay Fiction",
          "item": "https://delayfiction.org"
          },{
          "@type": "ListItem",
          "position": 2,
          "name": "{{ breadcrumbVolume path }}",
          "item": "https://delayfiction.org/{{ breadcrumbVolume path}}"
          },{
           "@type": "ListItem",
          "position": 3,
          "name": "{{ breadcrumbIssue path }}",
          "item": "https://delayfiction.org/{{breadcrumbVolume path}}/{{breadcrumbIssue path}}"
          },{
          "@type": "ListItem",
          "position": 4,
          "name": "{{ title }}",
          "item": "https://delayfiction.org/{{ nakedPath path }}"
          }]
         }]
         }
      </script>
      {{ else if ( isIssue this ) }}
      <script type="application/ld+json">
        { "@context": "http://www.schema.org",
        "@graph": [{
        "@type": "PublicationIssue",
        "publisher": {
        "@type": "Organization",
        "name": "Delay Fiction",
        "logo": "https://delayfiction.org/delay-fiction.png"
        },
        "sourceOrganization": "Delay Fiction",
        "creator":  {
        "@type": "Organization",
        "name": "Delay Fiction",
        "logo": "https://delayfiction.org/delay-fiction.png"
        },
        "headline": "{{ title }}",
        "image": "https://delayfiction.org/{{ artFor this }}",
        "description": "The {{ title }} issue of Delay Fiction.",
        "url": "https://delayfiction.org/{{ nakedPath path }}",
        "datePublished": "{{ date }}"
        },{
        "@type": "BreadcrumbList",
        "itemListElement": [{
          "@type": "ListItem",
          "position": 1,
          "name": "Delay Fiction",
          "item": "https://delayfiction.org"
          },{
          "@type": "ListItem",
          "position": 2,
          "name": "{{ breadcrumbVolume path }}",
          "item": "https://delayfiction.org/{{ breadcrumbVolume path }}"
          },{
          "@type": "ListItem",
          "position": 3,
          "name": "{{ breadcrumbIssue path }}",
          "item": "https://delayfiction.org/{{ nakedPath path }}"
          }]
          }]
          }
      </script>
      {{ else if ( isVolume this ) }}
      <script type="application/ld+json">
        { "@context": "http://www.schema.org",
        "@graph": [{
        "@type": "PublicationIssue",
        "publisher": {
        "@type": "Organization",
        "name": "Delay Fiction",
        "logo": "https://delayfiction.org/delay-fiction.png"
        },
        "sourceOrganization": "Delay Fiction",
        "creator":  {
        "@type": "Organization",
        "name": "Delay Fiction",
        "logo": "https://delayfiction.org/delay-fiction.png"
        },
        "headline": "{{ title }}",
        "image": "https://delayfiction.org/{{ artFor this }}",
        "description": "The {{ title }} issue of Delay Fiction.",
        "url": "https://delayfiction.org/{{ nakedPath path }}",
        "datePublished": "{{ date }}"
        },{
        "@type": "BreadcrumbList",
        "itemListElement": [{
          "@type": "ListItem",
          "position": 1,
          "name": "Delay Fiction",
          "item": "https://delayfiction.org"
          },{
          "@type": "ListItem",
          "position": 2,
          "name": "{{ breadcrumbVolume path }}",
          "item": "https://delayfiction.org/{{ breadcrumbVolume path }}"
          }]
          }]
          }
      </script>
      {{ else }} 
      <script type="application/ld+json">
        { "@context": "https://www.schema.org",
        "@type": "BreadcrumbList",
        "itemListElement": [{
          "@type": "ListItem",
          "position": 1,
          "name": "Delay Fiction",
          "item": "https://delayfiction.org"
          },{
          "@type": "ListItem",
          "position": 2,
          "name": "{{ title }}",
          "item": "{{ nakedPath path }}"
          }]
          }
      </script>
      {{/if}}
  {{#if liveReloadPort}}
    <script src="http://localhost:{{liveReloadPort}}/livereload.js?snipver=1"></script>
  {{/if}}
</head>
